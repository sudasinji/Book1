<h1>Books</h1>
<% @books.each do |book| %>
<table>
<thead>
<tr>
	<th>本のタイトル</th>
	<th>本の感想</th>
	<th colspan="3"></th>
	</tr>
</thead>
	<tbody>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
	<td><%=link_to "詳細", book_path(book.id) %></td>
<td><%=link_to "編集", edit_book_path(book.id) %></td>
<td><%=link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
</tr>
</tbody>
</table>
<% end %>




<h2>New book</h2>

<%= form_for(@book, url: '/books') do |f| %>

<h3>本のタイトル</h3>
<%= f.text_field :title %>

<h3>本の感想</h3>
<%= f.text_area :body %>

<%= f.submit 'create book' %>


<% end %>